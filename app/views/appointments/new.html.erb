<h1>"Add Patient To Doctor"</h1>

<%= form_with(model: [@doctor, @appointments], local: true, class: "ui form" ) do |f| %>
  <%= f.label :user %>
  <%= f.select :user_id, @users.collect { |u| [u.first_name, u.id] } %>
  <br />
  <%= f.label :role %>
  <%= f.select :role, ['patient', 'case-study', 'athlete'] %>
  <br />
  <%= f.submit nil, class: "ui green button inverted" %>
<% end %>